<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:orientation="vertical"
    tools:context=".MessagesActivity">

    <GridView
        android:id="@+id/gridview"
        android:layout_width="match_parent"
        android:layout_height="545dp"
        android:layout_marginBottom="60dp"
        android:background="@color/colorBackground"
        android:numColumns="1">

    </GridView>


    <LinearLayout
        android:layout_width="369dp"
        android:layout_height="54dp"
        android:layout_gravity="center_horizontal|center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/profile"
            android:layout_width="36dp"
            android:layout_height="29dp"
            android:padding="2dp"
            android:src="@drawable/profile"></ImageView>

        <EditText
            android:layout_width="226dp"
            android:layout_height="30dp"
            android:padding="2dp"></EditText>

        <ImageButton
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:padding="2dp"
            android:src="@drawable/send"></ImageButton>

        <ImageButton
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:padding="2dp"
            android:src="@drawable/camera"></ImageButton>

        <ImageButton
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:padding="2dp"
            android:src="@drawable/attach"></ImageButton>

        <ImageButton
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:padding="2dp"
            android:src="@drawable/image"></ImageButton>

    </LinearLayout>



</LinearLayout>